{
  "name": "payflex-cypress-tests",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open --env environment=uat",
    "cypress:run": "cypress run --env environment=uat",
    "test": "cypress run --env environment=uat --reporter mochawesome --reporter-options reportDir=cypress/results,overwrite=false,html=false,json=true && node send-results.js",
    "send-results": "node send-results.js"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "cypress": "^13.6.2",
    "@badeball/cypress-cucumber-preprocessor": "^20.0.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "esbuild": "^0.19.11",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.{js,ts}",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/reports",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  }
}
